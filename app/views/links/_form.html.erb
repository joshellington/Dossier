<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url, :placeholder => 'Please include the whole thing' %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :placeholder => 'Use whatever you see fit' %>
  </div>

  <div class="field">
    <%= f.label :category, 'Category' %>
    <%= collection_select(:link, :category_id, Category.all, :id, :title) %>
  </div>

  <div class="field">
    <%= f.label :body, 'Body <span>*HTML allowed</span>'.html_safe %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
